{% extends "layout.jinja2" %}
{% block content %}
    <form method="POST">
        <div class="row" id="detail-entry">
            <div class="form-group">
                <label class="input-header" for="username">Username</label>
                <input type="text" pattern="\w+" id="input-title" name="username" value="{{ username }}" required/>
            </div>
            <div class="form-group">
                <label class="input-header" for="password">Password</label>
                <input type="password" pattern="\w+" id="input-title" name="password" value="{{ password }}" required/>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Login" />
                {{ error }}
            </div>
        </div>
    </form>
{% endblock %}