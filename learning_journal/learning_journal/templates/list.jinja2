{% extends "layout.jinja2" %}
{% block content %}
    <div class="row">
        <h1>Today I Learned ... <small>401 Python Learning Journal</small></h1>
        <hr>
    </div>
    <div class="row">
        <div class="col-md-10">
            {% for post in entry %}
            <div class="row entry-row">
                <h2><a href="/journal/{{ post.id }}">{{ post.title }}</a></h2>
                <div class="byline">By {{ post.author }} â€” {{ post.date }}</div>
                <div class="post-body">{{ post.text }}</div>
            </div>
            {% endfor %}
        </div>
        {% if userauth %}
        <div class="col-md-2">
            <a href="/journal/new-entry"><input type="button" class="btn btn-primary" value="Add a New Entry"></a>
        </div>
        {% endif %}
    </div>
    {% if userauth %}
        <a href='/logout'><input type="button" class="btn btn-default" value="Log out" /></a>
    {% else %}
        <a href='/login'><input type="button" class="btn btn-default" value="Log in" /></a>
    {% endif %}
{% endblock %}
